name:                my-hangman
version:             0.1.0.0
synopsis:            Playing Hangman
-- description:
license:             BSD3
license-file:        LICENSE
author:              Ciprian Sabareanu
maintainer:          ciprian.sabareanu@opti.ro
-- copyright:
category:            Game
build-type:          Simple
extra-source-files:  data/dict.txt
cabal-version:       >=1.10

library
  hs-source-dirs:      src
  exposed-modules:     MyHangman
  ghc-options:         -Wall -fwarn-tabs
  build-depends:       base >=4.7 && <5
                     , random
                     , split
  default-language:    Haskell2010


executable my-hangman
  main-is:             Main.hs
  hs-source-dirs:      app
  -- other-modules:
  -- other-extensions:
  build-depends:       base >=4.7 && <5
                     , random
                     , split
                     , my-hangman
  default-language:    Haskell2010

test-suite tests
  ghc-options:        -Wall -fno-warn-orphans
  type:               exitcode-stdio-1.0
  main-is:            Tests.hs
  hs-source-dirs:     tests
  build-depends:      base >=4.7 && <5
                     ,random
                     ,split
                     ,my-hangman
                     ,QuickCheck
  default-language:   Haskell2010